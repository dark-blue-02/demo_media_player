<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_bottom_player_background"
    android:theme="@style/MaterialAlertDialog.Material3.Title.Text">

    <ImageView
        android:id="@+id/img_music_note"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/emptyDescription"
        android:src="@drawable/round_music_note_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_prev"
        app:layout_constraintStart_toEndOf="@+id/img_music_note"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/unknown_track" />


    <ImageView
        android:id="@+id/btn_prev"
        style="@style/player_button"
        android:contentDescription="@string/emptyDescription"
        android:src="@drawable/round_skip_previous_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_play"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_play"
        style="@style/player_button"
        android:contentDescription="@string/emptyDescription"
        android:src="@drawable/round_play_arrow_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_next"
        style="@style/player_button"
        android:contentDescription="@string/emptyDescription"
        android:src="@drawable/round_skip_next_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_queue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_queue"
        style="@style/player_button"
        android:contentDescription="@string/emptyDescription"
        android:src="@drawable/round_queue_music_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
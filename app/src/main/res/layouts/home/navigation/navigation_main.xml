<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="app.mp.view.screens.home.HomeScreen"
        android:label="HomeScreen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreen_to_audioSearchScreen"
            app:destination="@id/audioSearchScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeScreen_to_localAudioScreen"
            app:destination="@id/localAudioScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/audioSearchScreen"
        android:name="app.mp.view.screens.audio_search.AudioSearchScreen"
        android:label="AudioSearchScreen"
        tools:layout="@layout/fragment_audio_search_screen" />
    <fragment
        android:id="@+id/localAudioScreen"
        android:name="app.mp.view.screens.local_audio.LocalAudioScreen"
        android:label="LocalAudioScreen"
        tools:layout="@layout/fragment_local_audio_screen"/>
</navigation>